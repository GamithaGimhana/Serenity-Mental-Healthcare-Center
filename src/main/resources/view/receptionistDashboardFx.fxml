<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gdse.serenity.controller.ReceptionistDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #3a7a6f;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Serenity Mental Health Therapy Center" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="userNameLabel" text="Welcome, Receptionist" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button fx:id="accountSettingsButton" mnemonicParsing="false" onAction="#openAccountSettings" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Account Settings" />
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #ff5757; -fx-text-fill: white;" text="Logout" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <left>
        <VBox prefWidth="200.0" spacing="5.0" style="-fx-background-color: #e6f3f0;" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="dashboardButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#showDashboard" style="-fx-background-color: transparent; -fx-alignment: BASELINE_LEFT;" text="Dashboard">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
                <Button fx:id="patientManagementButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#showPatientManagement" style="-fx-background-color: transparent; -fx-alignment: BASELINE_LEFT;" text="Patient Management">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="sessionSchedulingButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#showSessionScheduling" style="-fx-background-color: transparent; -fx-alignment: BASELINE_LEFT;" text="Session Scheduling">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="paymentManagementButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#showPaymentManagement" style="-fx-background-color: transparent; -fx-alignment: BASELINE_LEFT;" text="Payment Management">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="reportsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#showReports" style="-fx-background-color: transparent; -fx-alignment: BASELINE_LEFT;" text="Reports">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label text="Receptionist Dashboard" textFill="#3a7a6f">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #e8f4f0; -fx-background-radius: 10;">
                                    <children>
                                        <Label text="Today's Appointments" textFill="#3a7a6f">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="todayAppointmentsLabel" text="0" textFill="#3a7a6f">
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #e8f4f0; -fx-background-radius: 10;">
                                    <children>
                                        <Label text="Active Patients" textFill="#3a7a6f">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="activePatientsLabel" text="0" textFill="#3a7a6f">
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #e8f4f0; -fx-background-radius: 10;">
                                    <children>
                                        <Label text="Pending Payments" textFill="#3a7a6f">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="pendingPaymentsLabel" text="0" textFill="#3a7a6f">
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </children>
                        </HBox>
                        <TitledPane animated="false" expanded="true" text="Today's Schedule">
                            <content>
                                <TableView fx:id="todayScheduleTable" prefHeight="300.0">
                                    <columns>
                                        <TableColumn fx:id="timeColumn" prefWidth="100.0" text="Time" />
                                        <TableColumn fx:id="patientColumn" prefWidth="150.0" text="Patient" />
                                        <TableColumn fx:id="therapistColumn" prefWidth="150.0" text="Therapist" />
                                        <TableColumn fx:id="programColumn" prefWidth="200.0" text="Therapy Program" />
                                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                                    </columns>
                                    <placeholder>
                                        <Label text="No appointments scheduled for today" />
                                    </placeholder>
                                </TableView>
                            </content>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #f0f7f5;" BorderPane.alignment="CENTER">
            <children>
                <Label text="© 2025 Serenity Mental Health Therapy Center" />
            </children>
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
